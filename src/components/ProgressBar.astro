---
const { total = 0, goal = 150, supporters = 0 } = Astro.props;
const pct = Math.min(100, Math.round((total/goal)*100));
---
<section class="p-6 rounded-2xl border">
  <div class="flex items-center justify-between mb-2">
    <h3>Progresso da campanha</h3><span>{pct}%</span>
  </div>
  <div class="w-full h-3 bg-gray-700/40 rounded">
    <div style={`width:${pct}%`} class="h-3 rounded bg-emerald-500 transition-[width] duration-500"></div>
  </div>
  <p class="mt-3">
    <strong>R$ {total}</strong> de R$ {goal}/mês • {supporters} assinantes
  </p>
</section>