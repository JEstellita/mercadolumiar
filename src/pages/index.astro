import BaseLayout from '../layouts/BaseLayout.astro';

export const prerender = true;

// Buscar dados reais da API
let campaignData = {
  currentAmount: 0,
  goal: 150.00,
  supporters: 0,
  percentage: 0
};

try {
  const response = await fetch(`${Astro.url.origin}/api/progresso`);
  if (response.ok) {
    const data = await response.json();
    campaignData = {
      currentAmount: data.totalMonthly || 0,
      goal: data.goal || 150,
      supporters: data.supporters || 0,
      percentage: Math.round((data.totalMonthly || 0) / (data.goal || 150) * 100)
    };
  }
} catch (error) {
  console.log('Erro ao buscar dados da campanha:', error);
  // Mant√©m os valores padr√£o (zeros)
}
