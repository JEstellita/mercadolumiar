---
import BaseLayout from '../layouts/BaseLayout.astro';

const featuredProducts = [
  {
    title: "Hortaliças Orgânicas",
    description: "Verduras frescas colhidas diariamente direto da horta",
    provider: "Sítio Verde",
    price: "R$ 15-25",
    icon: "H"
  },
  {
    title: "Mel Artesanal",
    description: "Mel puro das flores silvestres das montanhas",
    provider: "Apiário da Serra",
    price: "R$ 35",
    icon: "M"
  },
  {
    title: "Queijos Artesanais",
    description: "Queijos frescos e curados com leite local",
    provider: "Laticínios do Vale",
    price: "R$ 25-45",
    icon: "Q"
  }
];

const services = [
  {
    title: "Culinária Caseira",
    description: "Pratos especiais para eventos e celebrações",
    provider: "Chef da Roça",
    price: "Sob consulta",
    icon: "C"
  },
  {
    title: "Transporte Sustentável",
    description: "Entrega ecológica para toda a região",
    provider: "Eco Transport",
    price: "R$ 10-30",
    icon: "T"
  },
  {
    title: "Artesanato Local",
    description: "Peças únicas feitas com materiais da região",
    provider: "Ateliê Lumiar",
    price: "R$ 50-200",
    icon: "A"
  }
];
---

<BaseLayout title="Mercado Biorregional Lumiar - Economia Local Sustentável">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <div class="hero-badge text-center">
          <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          Economia Local Sustentável
        </div>
        
        <h1 class="hero-title text-center">
          Compre local,<br>
          <span style="background: linear-gradient(135deg, #2d5016, #68d391); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">construa futuro</span>
        </h1>
        
        <p class="hero-subtitle text-center">
          Conecte-se diretamente com <strong>produtores e prestadores de serviços</strong> 
          em Lumiar e Biorregião. Uma plataforma que fortalece nossa economia local.
        </p>
        
        <div class="hero-actions flex-center">
          <a href="/produtores" class="btn btn-primary">
            Ver Produtores
          </a>
          <a href="/campanha" class="btn btn-outline">
            Apoiar Campanha
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Produtos Section -->
  <section class="section">
    <div class="container">
      <div class="section-header slide-in-left">
        <h2 class="section-title">Produtos em Destaque</h2>
        <p class="section-subtitle">
          Direto de quem produz em Lumiar e Biorregião
        </p>
      </div>
      
      <div class="cards-grid">
        {featuredProducts.map((product, index) => (
          <div class="card">
            <div class="card-icon">
              {product.icon}
            </div>
            <h3 class="card-title">{product.title}</h3>
            <p class="card-description">{product.description}</p>
            <div class="card-meta">
              <span class="card-provider">{product.provider}</span>
              <span class="card-price">{product.price}</span>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center" style="margin-top: 3rem;">
        <a href="/produtores" class="btn btn-outline">
          Ver Todos os Produtores
        </a>
      </div>
    </div>
  </section>

  <!-- Serviços Section -->
  <section class="section" style="background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);">
    <div class="container">
      <div class="section-header slide-in-right">
        <h2 class="section-title">Serviços Locais</h2>
        <p class="section-subtitle">
          Prestadores de serviços da nossa comunidade
        </p>
      </div>
      
      <div class="cards-grid">
        {services.map((service, index) => (
          <div class="card">
            <div class="card-icon">
              {service.icon}
            </div>
            <h3 class="card-title">{service.title}</h3>
            <p class="card-description">{service.description}</p>
            <div class="card-meta">
              <span class="card-provider">{service.provider}</span>
              <span class="card-price">{service.price}</span>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center" style="margin-top: 3rem;">
        <a href="/sobre" class="btn btn-outline">
          Conhecer Mais Serviços
        </a>
      </div>
    </div>
  </section>

  <!-- Como Funciona Section -->
  <section class="section">
    <div class="container">
      <div class="section-header fade-in">
        <h2 class="section-title">Como Funciona</h2>
        <p class="section-subtitle">
          Simples, direto e transparente
        </p>
      </div>
      
      <div class="cards-grid">
        <div class="card">
          <div class="card-icon">1</div>
          <h3 class="card-title">Explore</h3>
          <p class="card-description">
            Navegue pelos produtores e prestadores de serviços locais. 
            Veja fotos, descrições detalhadas e informações de contato.
          </p>
        </div>
        
        <div class="card">
          <div class="card-icon">2</div>
          <h3 class="card-title">Conecte</h3>
          <p class="card-description">
            Entre em contato direto via WhatsApp. Tire dúvidas, 
            negocie preços e combine entregas ou retiradas.
          </p>
        </div>
        
        <div class="card">
          <div class="card-icon">3</div>
          <h3 class="card-title">Fortaleça</h3>
          <p class="card-description">
            Ao comprar local, você fortalece nossa economia e 
            contribui para um futuro mais sustentável.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Final Section -->
  <section class="section" style="background: linear-gradient(135deg, #2d5016 0%, #68d391 100%); color: white;">
    <div class="container">
      <div class="section-header fade-in">
        <h2 class="section-title" style="color: white;">Junte-se à nossa comunidade</h2>
        <p class="section-subtitle" style="color: rgba(255,255,255,0.9);">
          Ajude-nos a construir uma economia local forte e sustentável
        </p>
      </div>
      
      <div style="text-align: center; margin-top: 3rem;">
        <div class="hero-actions text-center">
          <a href="/assinar" class="btn" style="background: white; color: #2d5016;">
            Apoiar Mensalmente
          </a>
          <a href="/whatsapp" class="btn btn-outline" style="border-color: white; color: white;">
            Falar no WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>

  <style>
    /* Animation delays for cards */
    .cards-grid .card:nth-child(1) { transition-delay: 0s; }
    .cards-grid .card:nth-child(2) { transition-delay: 0.1s; }
    .cards-grid .card:nth-child(3) { transition-delay: 0.2s; }
    .cards-grid .card:nth-child(4) { transition-delay: 0.3s; }
  </style>
</BaseLayout>
