        }
        
        // Dispatch view_progress event
        window.dispatchEvent(new CustomEvent('track', {
          detail: {
            event: 'view_progress',
            total: mockData.totalMonthly,
            goal: mockData.goal,
            supporters: mockData.supporters
          }
        }));
      }
